    "version": "0.2.0",
    "configurations": [
        {
            "name": "playground",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/playground",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
            "args": ["${input:Message}"]
        },
        {
            "name": "mono",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/mono",
            "cwd": "${workspaceFolder}",
            "envFile": "${workspaceFolder}/.env",
        }
    ],

    "inputs": [
        {
            "id": "Message",
            "type": "promptString",
            "default": "Message",
            "description": "message to be sent"
        }
    ]
}